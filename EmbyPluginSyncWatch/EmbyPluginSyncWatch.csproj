<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>EmbyPluginSyncWatch</AssemblyName>
    <RootNamespace>EmbyPluginSyncWatch</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MediaBrowser.Common" Version="4.7.*" />
    <PackageReference Include="MediaBrowser.Controller" Version="4.7.*" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Web\syncwatch.js">
      <LogicalName>EmbyPluginSyncWatch.Web.syncwatch.js</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Web\configPage.html">
      <LogicalName>EmbyPluginSyncWatch.Web.configPage.html</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

</Project>
